@model Fly.Model.ViewModel.UserHomeViewModel

<div class="fly-home" id="LAY-userhome" >
    <img src="@Model.user.photo" alt="@Model.user.nickname">
    <h1>
        @Model.user.nickname
        <i class="iconfont icon-nan"></i>
        <span style="color:#c00;">（超级码农）</span>
        <!-- <i class="iconfont icon-nv"></i> -->
        <!-- <span style="color:#c00;">（超级码农）</span>
        <span style="color:#5FB878;">（活雷锋）</span>
        <span>（该号已被封）</span> -->
    </h1>
    <div class="layui-main">
        <p style="display: inline-block; max-width: 800px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: #999; margin-top: 10px;">
            @Model.user.sign
        </p>
    </div>
    <!--<div class="fly-sns">
      <span lay-event="">添加好友</span>
    </div>-->
</div>
<div class="main layui-clear">
    <div class="fly-main layui-clear">

        <div class="home-nav">
            <a href="">主页</a>
            <!--<a href="">求解</a>-->
        </div>
        <div class="home-left">
            <h2>最近发表的求解</h2>
            <ul class="jie-row">
                @if (Model.articleRecords.Count() > 0)
                {
                    foreach (var item in Model.articleRecords)
                    {
                        <li>
                            @if (item.iscream)
                    {
                                <span class="fly-jing">精</span>
                            }
                            @if (item.isover)
                    {
                                <span class="jie-status jie-status-ok">已解决</span>
                            }
                            else
                            {
                                <span class="jie-status">求解中</span>
                            }

                            @if (item.istop)
                    {
                                <span class="fly-stick">精</span>
                            }
                            <a href="/detail/@item.id">@item.title</a>
                            <i>@item.addtimestr</i>
                            <em>@(item.visitor_count)阅/@(item.comment_count)答</em>
                        </li>
                    }
                }
                else
                {
                    <li class="fly-none" style="min-height: 50px; padding:30px 0; height:auto;"><i style="font-size:14px;">没有发表任何求解</i></li>
                }
            </ul>

            <h2 style="margin-top:30px;">最近的回答</h2>
            <ul class="home-jieda">
                @if (Model.commentRecords.Count() > 0)
                {
                    foreach (var item in Model.commentRecords)
                    {
                        <li>
                            <p>
                                <span>@item.addtimestr</span>
                                在<a href="/detail/@item.artid" target="_blank">@item.title</a>中回答：
                            </p>
                            <div class="home-dacontent">
                                @item.comments
                            </div>
                        </li>
                    }
                }
                else
                {

                    <li class="fly-none" style="min-height: 50px; padding:30px 0; height:auto;"><span>没有回答任何问题</span></li>
                }
            </ul>
        </div>
        <div class="home-right">
            <ul class="home-info">
                <li><i class="iconfont icon-zuichun"></i>拥有飞吻：<span style="color: #FF7200;">@Model.user.score</span></li>
                <li><i class="iconfont icon-shijian"></i>加入时间：<span>@Model.user.addtime.ToShortDateString()</span></li>
                <li><i class="iconfont icon-chengshi"></i>城市：<span>@Model.user.city</span></li>
            </ul>
        </div>
    </div>
</div>


@section scripts{
    <script>
        layui.use('user', function () {
            console.log("加载完user");
        });
    </script>
}